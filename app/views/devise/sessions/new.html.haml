.container
  .form-signin
    %h2.form-signin-heading Please sign in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
      = f.label :email
      = f.email_field :email, autofocus: true, placeholder: 'Email address', required: true, id: 'inputEmail', class: 'form-control'
      = f.label :Password
      = f.password_field :password, placeholder: 'Password', required: true, class: 'form-control'
      .checkbox
        %label
        = f.check_box :remember_me, value: 'remember-me'
        | Remember me
      .text-center
        = f.submit class: 'btn btn-lg btn-primary btn-block', value: 'Sign in'
        %p
          Not a member?
          = link_to "Sign up now",  new_registration_path(resource_name)

