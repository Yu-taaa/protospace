.col-sm-4.col-md-3.proto-content
  - if user_signed_in? && prototype.user_id == current_user.id
    .dropdown.drop_menu_location
      = button_tag "ACTION", type: "button",class: "btn btn-default dropdown_toggle", id: 'dropdownMenu', aria: { expanded: false }, data: { toggle: "dropdown" }, role: "button"
      %ul.dropdown-menu{ role: "menu" }
        %li
          = link_to 'Delete', prototype_path(prototype.id), method: :delete
        %li
          = link_to 'Edit', edit_prototype_path(prototype.id), method: :get
    .thumbnail
      = link_to (image_tag prototype.main_image_url), prototype_path(prototype.id), method: :get
      .caption
        %h3
          = prototype.title
        .proto-meta
          .proto-user
            = link_to "by #{prototype.user.nickname}", user_path(prototype.user), method: :get
          .proto-posted
            Apr 26
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
