.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{ class: "#{ "active" if @status == 'popular' }" }
          = link_to 'Popular PROTO', root_path
        %li{ class: "#{ "active" if @status == 'newest' }" }
          = link_to 'Newest PROTO', newests_path

      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      = render partial: "prototypes/prototype", locals: { prototype: prototype }

.text-center
  %ul.pagination
    %li.disabled
      = paginate(@prototypes)
