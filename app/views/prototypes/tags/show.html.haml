.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{ class: "#{ "active" if @status == 'popular' }" }
          = link_to 'Popular PROTO', root_path
        %li{ class: "#{ "active" if @status == 'newest' }" }
          = link_to 'Newest PROTO', newests_path

      %button{type: "button", class: "btn btn-default col-lg-1"}
        = link_to "VIEW TAGS", tags_path, method: :get

.container.proto-list
  .row
    = render partial: 'prototypes/prototype', collection: @prototypes
    / 「collection」一つの記事項目をテンプレート化して、それを指定した要素（:@prototypes）の分だけ繰り返し表示する
.text-center
  %ul.pagination
    %li.disabled
      = paginate(@prototypes)
